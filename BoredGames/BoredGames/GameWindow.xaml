<Window x:Class="BoredGames.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BoredGames"
        Title="GameWindow" Height="300" Width="300">

   <Grid>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Min Players" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top"/>
        <Label Content="Max Players" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="96,14,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="120"/>
        <ComboBox HorizontalAlignment="Left" Margin="96,58,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox HorizontalAlignment="Left" Margin="96,104,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Game Length" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="96,156,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding Times}">
            <ComboBox.DataContext>
                <local:GameList />
            </ComboBox.DataContext>
        </ComboBox>

    </Grid>
</Window>
